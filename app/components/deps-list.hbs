{{#async-await this.items as |items|}}

{{!-- DEPENDENCY LIST --}}
<div class="w-full bg-black bg-opacity-10 h-full rounded-lg my-6 overflow-auto p-4">
  <div class="flex flex-col text-gray-100">
    {{#each items as |d|}}

    {{!-- DEPENDENCY LIST ITEM --}}
    <div class="flex justify-between py-4 p-2 space-x-4">
      <div class="flex items-start">
        <div class="rounded bg-gray-900 p-2 border border-gray-600">
          <img class="w-5 h-5" src="https://avatars.dicebear.com/v2/identicon/{{d.name}}.svg" alt="{{d.name}}">
        </div>
      </div>
      <div class="flex-1 flex-col">
        <div class="text-sm text-white">{{d.name}} <span class="bg-gray-700 text-white rounded-full px-2">{{d.version}}
          </span></div>
        <div class="flex space-x-4 text-gray-400">
          <div class="text-xs">Latest version {{d.latest}}</div>
        </div>
      </div>
      <div class="flex">
        <a href="https://npmjs.com/package/{{d.name}}"
          class="flex items-center justify-center h-full p-2 bg-blue-500 bg-opacity-10 hover:bg-opacity-20 rounded">
          <i class="ri-external-link-line text-blue-600 text-sm leading-none"></i>
        </a>
      </div>
    </div>
    {{/each}}

  </div>
</div>
{{else}}

{{!-- DEPENDENCY LIST LOADING STATE PLACEHOLDER --}}
<div class="w-full bg-black bg-opacity-10 h-full rounded-lg my-6 overflow-auto p-4">
  <div class="flex flex-col text-gray-100">
    <div class="flex justify-between py-4 p-2 space-x-4 animate-pulse items-center">
      <div class="flex items-start ">
        <div class="rounded bg-gray-800 h-10 w-10 p-2">
        </div>
      </div>
      <div class="flex-1 flex-col">
        <div class="h-4 w-1/2 bg-gray-900 mb-1 rounded"></div>
        <div class="h-4 w-1/3 bg-gray-900 rounded"></div>
      </div>
    </div>
    <div class="flex justify-between py-4 p-2 space-x-4 animate-pulse items-center">
      <div class="flex items-start ">
        <div class="rounded bg-gray-800 h-10 w-10 p-2">
        </div>
      </div>
      <div class="flex-1 flex-col">
        <div class="h-4 w-1/2 bg-gray-900 mb-1 rounded"></div>
        <div class="h-4 w-1/3 bg-gray-900 rounded"></div>
      </div>
    </div>
    <div class="flex justify-between py-4 p-2 space-x-4 animate-pulse items-center">
      <div class="flex items-start ">
        <div class="rounded bg-gray-800 h-10 w-10 p-2">
        </div>
      </div>
      <div class="flex-1 flex-col">
        <div class="h-4 w-1/2 bg-gray-900 mb-1 rounded"></div>
        <div class="h-4 w-1/3 bg-gray-900 rounded"></div>
      </div>
    </div>
  </div>
</div>
{{/async-await}}