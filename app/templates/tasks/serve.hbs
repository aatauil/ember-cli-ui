<div class="serve">
  <div class="serve-inner">

    {{!-- PAGE HEADER --}}
    <div class="header">
      <div class="header-inner">
        <div class="header-icon-square">
          <i class="ri-file-add-line header-icon"></i>
        </div>
        <h1 class="header-title">Serve</h1>
      </div>
    </div>

    {{!-- HORIRZONTAL SPLIT VIEW | left - right --}}
    <div class="serve-split">
      <div class="serve-split-right">

        {{!-- TOOLBAR --}}
        <div class="serve-toolbar">
          {{!-- TOOLBAR LEFT - buttons --}}
          <div class="serve-actions">
            <button type="button" class="flex items-center space-x-1 px-8 py-1 bg-gray-800 text-gray-100 rounded">
              <i class="ri-play-mini-line"></i>
              <span class="text-sm">Start</span>
            </button>
            <button type="button" class="flex items-center space-x-1 px-4 py-1 bg-gray-200 text-gray-800 rounded border border-gray-300">
              <i class="ri-settings-3-line"></i>
            </button>
          </div>

          {{!-- TOOLBAR RIGHT - command --}}
          <div class="serve-command">
            <span >ember serve --proxy http://localhost:90</span>
          </div>
        </div>

        {{!-- TERMINAL --}}
        <Terminal @command={{this.command}} @task="serve" @callback={{this.socketCallback}} />
      </div>

      {{!-- TODO: SERVE OPTIONS --}}
